<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    tools:context="com.sokchamreun.relativelayout.Main3Activity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="#cec9c9"
            android:layout_span="1"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="Row 1"
            />

        <TextView
            android:background="#e1dede"
            android:layout_span="1"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="Row 1"
            />
        <TextView
            android:background="#b7b2b2"
            android:layout_span="1"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="Row 1"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_span="1"
            android:background="#e7d3d3"
            android:layout_column="0"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="Row 2"
            />

        <TextView
            android:layout_span="1"
            android:background="#e1dede"
            android:layout_column="1"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="Row 2"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_weight="1"
            android:background="#dccbcb"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="Row 2"
            />

        <TextView
            android:layout_weight="1"
            android:background="#e1dede"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="Row 2"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_span="1"
            android:background="#8f8585"
            android:layout_column="1"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="Row 2"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_span="3"
            android:background="#e1dede"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="Row 2"
            />
    </TableRow>
</TableLayout>
